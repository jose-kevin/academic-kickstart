.photography-html{scroll-snap-type:x mandatory}.photography-container{display:flex;overflow-x:scroll;height:100vh}.photography-section{align-items:flex-start;display:flex;flex-direction:column-reverse;flex-wrap:nowrap;justify-content:center;height:calc(100vh - 70px);padding-left:5vw;padding-right:5vw;width:100vw;scroll-snap-align:center}.photography-section:first-of-type{padding-left:10vw}.photography-section:last-of-type{padding-right:10vw}.photography-image{max-width:80vw}.photography-text{flex-shrink:1;margin-top:40px}@media only screen and (min-width:768px){.photography-html{scroll-snap-type:y mandatory;scroll-padding-top:calc(70px + 10vh)}.photography-container{display:block;overflow-x:hidden;overflow-y:scroll;height:100vh}.photography-section{align-items:flex-start;display:flex;flex-direction:row;flex-wrap:nowrap;justify-content:center;height:calc(100vh - 70px);padding-left:100px;padding-right:100px;scroll-snap-align:start}.photography-section:first-of-type{margin-top:calc(70px + 10vh);padding-left:100px}.photography-section:last-of-type{padding-right:100px}.photography-image{max-height:calc(80vh - 70px);max-width:100%}.photography-text{flex-shrink:1;text-align:right;min-width:300px;margin-top:0;margin-right:40px;max-width:500px}}